# https://wiki.archlinux.de/title/Numlock

if [ -x /usr/bin/numlockx ]; then
     /usr/bin/numlockx on
fi

export PATH=~/.local/share/rofi/rofi-translate:$PATH

# xsecurelock options
export XSECURELOCK_SAVER=saver_mpv
export XSECURELOCK_LIST_VIDEOS_COMMAND="ls ~/Videos/GLMatrix.webm"
export XSECURELOCK_SHOW_DATETIME=1
export XSECURELOCK_SINGLE_AUTH_WINDOW=1
export XSECURELOCK_AUTH_TIMEOUT=10
export XSECURELOCK_FONT="JetBrains Mono,JetBrains Mono Medium:style=Medium,Regular"
export XSECURELOCK_AUTH_FOREGROUND_COLOR=green
export XSECURELOCK_COMPOSITE_OBSCURER=0
